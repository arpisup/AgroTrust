{
  "name": "agrotrust",
  "version": "1.0.0",
  "description": "Blockchain-based system for verifying authenticity of GI (Geographical Indication) tagged products",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "set REPORT_GAS=true && hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "interact": "hardhat run scripts/interact.ts",
    "interact:local": "hardhat run scripts/interact.ts --network localhost",
    "populate": "hardhat run scripts/populateData.ts --network localhost",
    "verify": "hardhat run scripts/verifyData.ts --network localhost",
    "node": "hardhat node",
    "clean": "hardhat clean"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "solidity",
    "gi",
    "geographical-indication",
    "agriculture",
    "traceability",
    "supply-chain"
  ],
  "author": "AgroTrust Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "chai": "^4.3.7",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^10.2.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.0.4"
  }
}
